<?xml version="1.0"?>
<odoo>
     <record id="order_category_action" model="ir.actions.act_window">
        <field name="name">Order Category</field>
        <field name="res_model">order.category</field>
        <field name="view_mode">tree</field>
    </record>
    <record id="oder_category_view_tree" model="ir.ui.view">
        <field name="name">order.category.tree</field>
        <field name="model">order.category</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="order_category" required="True "/>
            </tree>
        </field>
    </record>
</odoo>