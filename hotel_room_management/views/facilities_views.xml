<?xml version="1.0"?>
<odoo>
    <record id="facilities_action" model="ir.actions.act_window">
        <field name="name">Facilities</field>
        <field name="res_model">room.facilities</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="hotel_tags_view_tree" model="ir.ui.view">
        <field name="name">facility.tree</field>
        <field name="model">room.facilities</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="facility_name" string="facilities"/>
                <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>


</odoo>